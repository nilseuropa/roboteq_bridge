<launch>
  <node pkg="roboteq_bridge" type="drive_node" name="roboteq">
    <param name="port" value="/dev/ttyACM0"/>
    <param name="baud" value="115200"/>
    <param name="watchdog_timeout" value="100"/> <!-- millisec -->
    <param name="encoder_ppr" value="256"/>
    <param name="gear_ratio" value="55.0"/>
    <param name="wheel_radius" value="0.095"/> <!-- meter -->
    <param name="wheel_separation" value="0.425"/> <!-- meter -->
    <param name="invert_left_motor" value="true"/>
    <param name="invert_right_motor" value="false"/>
    <!-- report angular velocities or tangent velocities -->
    <param name="report_angular_velocities" value="true"/>
    <param name="motor_amp_limit" value="10"/> <!-- Amper -->
    <param name="motor_max_speed" value="1000"/> <!-- rpm -->
    <param name="motor_max_acceleration" value="2000"/> <!-- rpm/sec -->
    <param name="motor_max_deceleration" value="2000"/> <!-- rpm/sec -->
	</node>
</launch>
